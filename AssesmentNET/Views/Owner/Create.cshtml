@{
}
@model Owners;

<h1>Create</h1>

<hr />

<div class="row">
	<div class="col-6">

		<div class="card">
			<div class="card-header">
				<h5>Create a new owner</h5>
			</div>
			<div class="card-body">
				<form asp-controller="Owners" asp-action="CreateOwner" method="post">
					<div class="mb-3">
						<label class="form-label">
							Driver License
							<input asp-for=DriverLicense type="text" class="form-control" />

						</label>
					</div>
					<div class="mb-3">
						<label class="form-label">
							First Name
							<input asp-for=FirstName type="text" class="form-control" />

						</label>
					</div>
					<div class="mb-3">
						<label class="form-label">
							Last Name
							<input asp-for=LastName type="text" class="form-control" />

						</label>
					</div>
					<div class="mb-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
			<div class="card-footer"></div>
		</div>



	</div>
</div>
