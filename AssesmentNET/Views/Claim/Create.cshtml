@{
}
@model Claims;

<h1>Create</h1>

<hr />

<div class="row">
	<div class="col-6">

		<div class="card">
			<div class="card-header">
				<h5>Create a new claim</h5>
			</div>
			<div class="card-body">
				<form asp-controller="Claims" asp-action="CreateClaim" method="post">
					<div class="mb-3">
						<label class="form-label">
							Description
							<input asp-for=Description type="text" class="form-control" />

						</label>
					</div>
					<div class="mb-3">
						<label class="form-label">
							Status
							<input asp-for=Status type="text" class="form-control" />

						</label>
					</div>
					<div class="mb-3">
						<label class="form-label">
							Date
							<input asp-for=Date type="text" class="form-control" />

						</label>
					</div>
					<div class="mb-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
			<div class="card-footer"></div>
		</div>



	</div>
</div>
